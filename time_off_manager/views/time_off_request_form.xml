<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="time_off_request_form_view">
        <field name="name">time off request form</field>
        <field name="model">time.off.request</field>
        <field name="arch" type="xml">
            <form string="Time Off Request">
                <group>
                    <field name="employee_id"/>
                    <field name="reason_for_time_off"/>
                    <field name="date_begin"/>
                    <field name="date_end"/>
                </group>
                <footer>
                   <!-- <button string="Submit" type="object"/> -->
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>